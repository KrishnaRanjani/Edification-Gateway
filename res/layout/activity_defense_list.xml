                android:textColor="@color/plumvelvet"
                android:textSize="20sp"
                android:text="M.A defence and strategic studies"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/def003"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:textColor="@color/plumvelvet"
                android:textSize="20sp"
                android:text="M.A defence studies"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/def004"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:textColor="@color/plumvelvet"
                android:textSize="20sp"
                android:text="Indian Army Office"

                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/def005"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:textColor="@color/plumvelvet"
