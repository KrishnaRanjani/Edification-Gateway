                android:text="Military Intelligence Specialist"

                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/def006"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:textColor="@color/plumvelvet"
                android:textSize="20sp"
                android:text="N.D.A"

                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/def007"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:textColor="@color/plumvelvet"
                android:textSize="20sp"
                android:text="Combat Engineer"

                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/def008"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:textColor="@color/plumvelvet"
                android:textSize="20sp"
                android:text="Army ordinanace"

                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/def009"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:textColor="@color/plumvelvet"
                android:textSize="20sp"
                android:text="Army pioneer Corps"

                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/def010"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:textColor="@color/plumvelvet"
                android:textSize="20sp"
                android:text="Defence security corps"

                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/def011"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:textColor="@color/plumvelvet"
                android:textSize="20sp"
                android:text="military farms"

                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/def012"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="30dp"
                android:text="To know more about indian army click here..."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHighlight="#ecc5c0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="23dp" />
        </TableRow>

    </TableLayout>

