                android:textColor="#E42217"
                android:text="Eligible Qualifications:"/>

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/pgb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="B.E. / B.Tech."/>


        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/pgc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:textSize="25dp"
                android:textColor="#000000"
                android:text="1. Civil Engineering"/>


        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/pgf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:textSize="25dp"
                android:textColor="#000000"
                android:text="2.Chemical Engineering"/>


               </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/pge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:textSize="25dp"
                android:textColor="#000000"
                android:text="3.Geoinformatics
                 Engineering"/>


        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/pgd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:textSize="25dp"
                android:textColor="#000000"
                android:text="4. Environmental Engineering"/>


        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/cpg4a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:textSize="25dp"
                android:textColor="#000000"
                android:text="5.B.E./B.Tech. (other branches)
                 with 3 years experience in the field of Environmental Management / Environmental Engg."/>


        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/cpg4b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:textSize="25dp"
                android:textColor="#000000"
                android:text="6.7.B.Tech. Petrochemical Technology"/>

        </TableRow>



